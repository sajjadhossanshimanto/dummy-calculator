#:import TextBox custom.textbox

# Custom button
<CustButton@MDFlatButton>:
    text_color: app.color_scheme['white']
    size_hint: root.size[0]*1/4, None
    text_size: self.size
    # markup: True
    # text: f'[b]{self.text}[b]'# future

<CustTextInput@TextBox>:
    text_size: self.size
    text_color: app.color_scheme['white']


# class functions
<CalcGridLayout>:
    md_bg_color: app.color_scheme['background']
    id: calculator
    display: entry
    rows: 10
    #columns: 4
    #padding: 10
    #spacing: 10
 
    # Where input is displayed
    BoxLayout:
        padding: 5
        CustTextInput:
            mode:'fill'
            id: entry
            font_size: 32
            hint_text: 'decimal'
            fill_color: [.47]*4
            icon_right_color: app.color_scheme['white']
            current_hint_text_color: app.color_scheme['green']
            icon_right: "arrow-down-drop-circle-outline"
            press_right_icon: root.show_dialog


    ## where output is displayed
    BoxLayout:
        padding: 5
        spacing: 5

        CustTextInput:
            id: deci
            hint_text: 'decimal'

        CustTextInput:
            id: bin
            hint_text: 'binary'

        CustTextInput:
            id: oct
            hint_text: 'octal'

        CustTextInput:
            id: hex
            hint_text: 'hexa'

    
    # When buttons are pressed update the entry
    # hex abc..
    BoxLayout:

        CustButton:
            text: "A"
            on_press: entry.text += self.text

        CustButton:
            text: "B"
            on_press: entry.text += self.text

        CustButton:
            text: "C"
            on_press: entry.text += self.text

        CustButton:
            text: "D"
            on_press: entry.text += self.text

    BoxLayout:

        CustButton:
            text: "E"
            on_press: entry.text += self.text

        CustButton:
            text: "F"
            on_press: entry.text += self.text

        CustButton:
            text: "Del"
            on_press: entry.text = entry.text[:-1]

        CustButton:
            text: "AC"
            on_press: 
                entry.text = ""
                deci.text = ''
                oct.text = ''
                bin.text = ''
                hex.text = ''

    # numbers
    BoxLayout:
        # spacing: 10

        CustButton:
            text: "7"
            on_press: entry.text += self.text

        CustButton:
            # text: "[b]8[/b]"
            text: "8"
            on_press: entry.text += self.text

        CustButton:
            text: "9"
            on_press: entry.text += self.text

        CustButton:
            text: "+"
            on_press: entry.text += self.text

    BoxLayout:
        # spacing: 10

        CustButton:
            text: "4"
            on_press: entry.text += self.text

        CustButton:
            text: "5"
            on_press: entry.text += self.text

        CustButton:
            text: "6"
            on_press: entry.text += self.text

        CustButton:
            text: "-"
            on_press: entry.text += self.text

    BoxLayout:
        # spacing: 10

        CustButton:
            text: "1"
            on_press: entry.text += self.text

        CustButton:
            text: "2"
            on_press: entry.text += self.text

        CustButton:
            text: "3"
            on_press: entry.text += self.text

        CustButton:
            text: "*"
            on_press: entry.text += self.text


    # When equals is pressed pass text in the entry
    # to the calculate function
    BoxLayout:
        # spacing: 10

        CustButton:
            text: "."
            on_press: entry.text += self.text

        CustButton:
            text: "0"
            on_press: entry.text += self.text

        CustButton:
            text: "Calculate"
            on_press: calculator.calculate(entry.text)

        CustButton:
            text: "/"
            on_press: entry.text += self.text

