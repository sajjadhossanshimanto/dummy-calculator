# Custom button
<CustButton@MDFillRoundFlatButton>:
    text_size: self.size
    md_bg_color: .2,.2,.2,1
    halign: 'center'
    valign: 'middle'

<CustTextInput@TextInput>:
    text_size: self.size
    halign: 'left'
    valign: 'middle'
    readonly: True


# Define id so I can refer to the CalcGridLayout
# class functions
# Display points to the entry widget

<CalcGridLayout>:

    id: calculator
    display: entry
    rows: 10
    columns: 4
    padding: 10
    spacing: 10
 
    # Where input is displayed
    BoxLayout:
        CustTextInput:
            font_size: 32
            id: entry
            multiline: False
            on_focus: focus = False

    ## where output is displayed
    # chose number system
    BoxLayout:
        CustButton:
            text: "decimal"
            color: 0, 1, 0, 1
            on_press: calculator.select(10)

        CustButton:
            text: "binary"
            on_press: calculator.select(2)

        CustButton:
            text: "octa"
            on_press: calculator.select(8)

        CustButton:
            text: "hexadecimal"
            on_press: calculator.select(16)

    BoxLayout:

        CustTextInput:
            id: deci

        CustTextInput:
            id: bin

        CustTextInput:
            id: oct

        CustTextInput:
            id: hex



    # When buttons are pressed update the entry
    
    # hex abc..
    BoxLayout:
        spacing: 10

        CustButton:
            text: "A"
            on_press: entry.text += self.text

        CustButton:
            text: "B"
            on_press: entry.text += self.text

        CustButton:
            text: "C"
            on_press: entry.text += self.text

        CustButton:
            text: "D"
            on_press: entry.text += self.text

        CustButton:
            text: "E"
            on_press: entry.text += self.text

        CustButton:
            text: "F"
            on_press: entry.text += self.text

        CustButton:
            text: "Del"
            on_press: entry.text = entry.text[:-1]

        CustButton:
            text: "AC"
            on_press: 
                entry.text = ""
                deci.text = ''
                oct.text = ''
                bin.text = ''
                hex.text = ''

    BoxLayout:
        spacing: 10

        CustButton:
            text: "7"
            on_press: entry.text += self.text

        CustButton:
            text: "8"
            on_press: entry.text += self.text

        CustButton:
            text: "9"
            on_press: entry.text += self.text

        CustButton:
            text: "+"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10

        CustButton:
            text: "4"
            on_press: entry.text += self.text

        CustButton:
            text: "5"
            on_press: entry.text += self.text

        CustButton:
            text: "6"
            on_press: entry.text += self.text

        CustButton:
            text: "-"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10

        CustButton:
            text: "1"
            on_press: entry.text += self.text

        CustButton:
            text: "2"
            on_press: entry.text += self.text

        CustButton:
            text: "3"
            on_press: entry.text += self.text

        CustButton:
            text: "*"
            on_press: entry.text += self.text

  
    # When equals is pressed pass text in the entry
    # to the calculate function
    BoxLayout:
        spacing: 10

        CustButton:
            text: "."
            on_press: entry.text += self.text

        CustButton:
            text: "0"
            on_press: entry.text += self.text

        CustButton:
            text: "Calculate"
            on_press: calculator.calculate(entry.text)

        CustButton:
            text: "/"
            on_press: entry.text += self.text

