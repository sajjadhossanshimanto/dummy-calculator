# Custom button
<CustButton@Button>:
    font_size: 32

<CustTextInput@TextInput>:
    font_size: 25
    readonly: True


# Define id so I can refer to the CalcGridLayout
# class functions
# Display points to the entry widget

<CalcGridLayout>:

    id: calculator
    display: entry
    rows: 8
    padding: 10
    spacing: 10
 
    # Where input is displayed
    BoxLayout:
        CustTextInput:
            font_size: 32
            id: entry
            multiline: False
            on_focus: focus = False

    # where output is displayed
    BoxLayout:
        Label:
            text: "decimal"
        Label:
            text: "binary"
        Label:
            text: "octa"
        Label:
            text: "hexadecimal"

    BoxLayout:

        CustTextInput:
            id: deci

        CustTextInput:
            id: bin

        CustTextInput:
            id: oct

        CustTextInput:
            id: hex



    # When buttons are pressed update the entry
    BoxLayout:
        spacing: 10

        CustButton:
            text: "7"
            on_press: entry.text += self.text

        CustButton:
            text: "8"
            on_press: entry.text += self.text

        CustButton:
            text: "9"
            on_press: entry.text += self.text

        CustButton:
            text: "+"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10

        CustButton:
            text: "4"
            on_press: entry.text += self.text

        CustButton:
            text: "5"
            on_press: entry.text += self.text

        CustButton:
            text: "6"
            on_press: entry.text += self.text

        CustButton:
            text: "-"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10

        CustButton:
            text: "1"
            on_press: entry.text += self.text

        CustButton:
            text: "2"
            on_press: entry.text += self.text

        CustButton:
            text: "3"
            on_press: entry.text += self.text

        CustButton:
            text: "*"
            on_press: entry.text += self.text

  
    # When equals is pressed pass text in the entry
    # to the calculate function
    BoxLayout:
        spacing: 10

        CustButton:
            text: "AC"
            on_press: 
                entry.text = ""
                deci.text = ''
                oct.text = ''
                bin.text = ''
                hex.text = ''

        CustButton:
            text: "0"
            on_press: entry.text += self.text

        CustButton:
            text: "Del"
            on_press: entry.text = entry.text[:-1]

        CustButton:
            text: "/"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10

        CustButton:
            text: "."
            on_press: entry.text += self.text

        CustButton:
            text: "Calculate"
            on_press: calculator.calculate(entry.text)


